{
  "extends": [
    "standard",
    "plugin:react/recommended",
    "prettier",
    "prettier/standard"
  ],
  "plugins": ["prettier", "react"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "prettier/prettier": [
      "error",
      { "singleQuote": true, "trailingComma": "es5" }
    ],
    "strict": 0
  },
  "globals": {
    "afterAll": true,
    "afterEach": true,
    "beforeAll": true,
    "beforeEach": true,
    "describe": true,
    "expect": true,
    "fdescribe": true,
    "fit": true,
    "it": true,
    "jest": true,
    "test": true,
    "xdescribe": true,
    "xit": true
  }
}
